<style>
  .custom-popular-categories{
    background-color: #ffffff;
  }
  @media screen and (max-width: 992px){
    #tags-wrapper{
        overflow-x: scroll;
        width: 100%;
        max-width: 100vw;
        overflow-y: visible;
        flex-wrap: nowrap!important;
        scroll-snap-type: x var(--tw-scroll-snap-strictness)!important;
        --tw-scroll-snap-strictness: mandatory !important;
        -ms-overflow-style: none;
        scrollbar-width: none;
        scrollbar-width: none;
        justify-content: flex-start !important;
    }

    #tags-wrapper::-webkit-scrollbar {
        display: none;
    }
}
</style>

<div class="page-width py-10 lg:py-16 px-0 lg:px-[5rem]">
  <h1 class="text-2xl lg:text-[28px] text-center text-black font-bold mb-6 lg:mb-14">{{ section.settings.section_title }}</h1>
  <div id="tags-wrapper" class="flex overflow-x-scroll justify-between gap-2 lg:gap-0">
    {% for block in section.blocks %}
      <a class="flex flex-col  gap-2 min-h-[86px] w-full min-w-fit px-3 lg:px-2 lg:min-w-[140px] lg:max-w-[140px] justify-center items-center {% if forloop.last %} mr-[1rem] lg:mr-0 {% endif %} {% if forloop.first %} ml-[1rem] lg:ml-0 {% endif %}" href="{{ block.settings.category_url }}">
        <div>
          <img class="min-w-[30px] max-h-[120px] rounded-[50%] bg-[#f5f5f5] lg:min-w-[35px]" src="{{ block.settings.image | img_url: "master" }}" alt="">
        </div>
        <div class="mt-3">
          <h2 class="text-black text-sm lg:text-base font-bold">{{ block.settings.title }}</h2>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Popular Categories",
  "tag": "section",
  "class": "custom-popular-categories",
  "settings": [
    {
      "type": "html",
      "id": "section_title",
      "label": "Section Title",
      "default": "Popular Categories"
    }
  ],
  "blocks": [
    {
      "name": "Product Category",
      "type": "product_category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        }, 
        {
          "type": "text",
          "id": "title",
          "label": "Category Title"
        }, 
        {
          "type": "url",
          "id": "category_url",
          "label": "Category URL"
        }
      ]
    }
  ]
}
{% endschema %}